# Computer Vision Image Classification - Environment Configuration
# Copy this file to .env and modify the values as needed

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Model architecture and training parameters
MODEL_INPUT_SHAPE=224,224,3
MODEL_NUM_CLASSES=3
MODEL_ARCHITECTURE=standard
MODEL_DROPOUT_RATE=0.5
MODEL_L2_REGULARIZATION=0.0001
MODEL_USE_BATCH_NORM=true
MODEL_USE_DATA_AUGMENTATION=true
MODEL_LEARNING_RATE=0.001
MODEL_OPTIMIZER=adam

# Model file path (set this after training)
MODEL_PATH=models/best_model.h5

# =============================================================================
# TRAINING CONFIGURATION
# =============================================================================

# Training parameters
TRAINING_EPOCHS=50
TRAINING_BATCH_SIZE=32
TRAINING_VALIDATION_SPLIT=0.2
TRAINING_EARLY_STOPPING_PATIENCE=10

# =============================================================================
# DATA CONFIGURATION
# =============================================================================

# Data directory paths
DATA_TRAIN_DIR=data/train
DATA_TEST_DIR=data/test
DATA_VALIDATION_DIR=data/validation

# Image processing settings
DATA_MAX_IMAGE_SIZE_MB=10
DATA_TARGET_SIZE=224,224
DATA_NORMALIZE=true
DATA_TARGET_FORMAT=RGB

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Server settings
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_RELOAD=false
API_WORKERS=1

# File upload limits
API_MAX_FILE_SIZE_MB=10
API_MAX_BATCH_SIZE=10

# CORS settings (comma-separated lists)
API_CORS_ORIGINS=*
API_CORS_METHODS=*
API_CORS_HEADERS=*

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file settings
LOG_FILE=logs/app.log
LOG_CONSOLE_OUTPUT=true
LOG_FILE_OUTPUT=true

# =============================================================================
# GLOBAL SETTINGS
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Application version
VERSION=1.0.0

# Class names mapping (JSON format)
# Example: {"0": "cat", "1": "dog", "2": "bird"}
CLASS_NAMES={"0": "class_0", "1": "class_1", "2": "class_2"}

# =============================================================================
# OPTIONAL: EXTERNAL SERVICES
# =============================================================================

# Uncomment and configure if using external services
# REDIS_URL=redis://localhost:6379
# DATABASE_URL=postgresql://user:password@localhost/dbname
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_S3_BUCKET=your_bucket_name

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Uncomment for development
# API_DEBUG=true
# API_RELOAD=true
# LOG_LEVEL=DEBUG